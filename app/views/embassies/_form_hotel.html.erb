<div class="row container">
    <div class="col s5">
	<%=form_tag(:search_results, method: 'GET', class: " card-panel ") do%>
	<div class="row">
		<div class="">
			<div class="input-field ">
				<%= text_field_tag(:destination, "",class: "validate") %>
				<%= label_tag(:destination) %>
			</div>
	    </div>
	    <div class="">
			<div class="input-field">
				<%= label_tag(:from) %>
				<%= text_field_tag(:from, "", class: "datepicker") %>

			</div>
		</div>
			<div class="">
				<div class="input-field ">
					<%= label_tag(:to) %>
					<%= text_field_tag(:to, "", class: "datepicker") %>
				</div>
			</div>
	</div>
	<div class="row">
		<div class="col m4 offset-m4 center">   
		<%= submit_tag(:search, class: 'btn waves-effect waves-light js-loader') %>
		<% end %>
		</div>
	</div>
	</div>
</div>	